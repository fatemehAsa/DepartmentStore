@page
@model DepartmentStore.Web.Pages.Admin.CountryMade.IndexModel
@{
    ViewData["Title"] = "لیست کشور های تولید کننده";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست کشور های تولید کننده</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست کشور های تولید کننده
            </div>
            <div class="col-md-12" style="margin-top: 10px">
                <a asp-page="CreateCountry" class="btn btn-outline btn-success">افزودن کشور تولید کننده جدید</a>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <div class="row">
                            <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                                <thead>
                                    <tr>
                                        <th>نام کشور</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var made in Model.CountryMades)
                                    {
                                        <tr>
                                            <td>@made.MadeTitle</td>
                                            @*<td>
                                                <a href="/Admin/CountryMade/EditCountry/@made.MadeId" class="btn btn-sm btn-warning">ویرایش</a>
                                            </td>*@
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
    </div>
</div>

