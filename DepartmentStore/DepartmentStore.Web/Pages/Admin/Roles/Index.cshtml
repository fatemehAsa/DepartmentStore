@page
@model DepartmentStore.Web.Pages.Admin.Roles.IndexModel
@{
    ViewData["Title"] = "لیست نقش ها";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست نقش ها</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست نقش های سایت
            </div>
            <div class="col-md-12" style="margin-top: 10px">
                <a asp-page="CreateRole" class="btn btn-outline btn-success">افزودن نقش جدید</a>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <div class="row">
                            <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                                <thead>
                                    <tr>
                                        <th>عنوان نقش</th>
                                        <th>دستورات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var role in Model.ListRoles)
                                    {
                                        <tr>
                                            <td>@role.RoleTitle</td>
                                            <td>
                                                <a href="/Admin/Roles/EditRole/@role.RoleId" class="btn btn-sm btn-warning">ویرایش</a>
                                                <a href="/Admin/Roles/DeleteRole/@role.RoleId" class="btn btn-sm btn-danger">حذف</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
    </div>
</div>
