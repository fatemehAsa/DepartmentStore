@model DepartmentStore.Core.DTOs.EditProfileUserPanelViewModel
@{
    ViewData["Title"] = "ویرایش حساب کاربری";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">ایران ابزار</a></li>
            <li id="RegisterText" class="breadcrumb-item active" aria-current="page">ویرایش حساب کاربری</li>
        </ul>
    </nav>
</div>
<main class="account">
    <partial name="_SideProfile" />
    <div class="container">
        <div class="user-account">
            <div class="row">
                <partial name="_SideBar" />
                <div class="col-md-8 col-sm-7 col-xs-12">
                    <section class="user-account-content">
                        <div>
                            <h1> ویرایش حساب کاربری </h1>
                        </div>
                        <div class="inner form-layer">
                            <form asp-action="EditProfile" method="post" enctype="multipart/form-data">
                                <input type="hidden" asp-for="AvatarName" />
                                <div class="row">
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon" id="username"><i class="fa fa-user"></i></span>
                                            <input type="text" asp-for="UserName" class="form-control" placeholder="نام کاربری" aria-describedby="username">
                                        </div>
                                    </div>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon" id="email-address"> <i class="fa fa-envelope"></i></span>
                                            <input type="text" asp-for="Email" class="form-control" placeholder="ایمیل" aria-describedby="email-address">
                                        </div>
                                    </div>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon" id="username"><i class="fa fa-map-marker"></i></span>
                                            <textarea asp-for="Address" class="form-control" placeholder="آدرس"></textarea>
                                        </div>
                                    </div>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <p class="help-block">تصویر پروفایل</p>
                                        <input type="file" asp-for="UserAvatar" />
                                        <p>لطفا فقط فایل انتخاب کنید</p>
                                        <img class="thumbnail" id="imgAvatar" src="/UserAvatar/@Model.AvatarName" style="max-width: 250px" />
                                        <p></p>
                                    </div>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <button class="btn btn-success"> ویرایش اطلاعات </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts
{
    <script>
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#imgAvatar').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]); // convert to base64 string
            }
        }

        $("#UserAvatar").change(function () {
            readURL(this);
        });
    </script>
}