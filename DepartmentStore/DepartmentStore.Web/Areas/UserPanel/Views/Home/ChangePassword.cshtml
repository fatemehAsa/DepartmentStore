@model DepartmentStore.Core.DTOs.ChangePasswordViewModel
@{
    ViewData["Title"] = "تغییر کلمه عبور";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">ایران ابزار</a></li>
            <li id="RegisterText" class="breadcrumb-item active" aria-current="page">تغییر کلمه عبور</li>
        </ul>
    </nav>
</div>
<main class="account">
    <partial name="_SideProfile" />
    <div class="container">
        <div class="user-account">
            <div class="row">
                <partial name="_SideBar" />
                <div class="col-md-8 col-sm-7 col-xs-12">
                    <section class="user-account-content">
                        <div>
                            <h1> تغییر کلمه عبور </h1>
                        </div>
                        <div class="inner form-layer">
                            <form asp-action="ChangePassword" method="post">
                                @if (ViewBag.IsSuccess != null)
                                {
                                    <div class="alert alert-success">کلمه عبور شما با موفقیت ویرایش شد</div>
                                }
                                <div class="row">
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon" id="username"><i class="fa fa-key"></i></span>
                                            <input type="password" asp-for="OldPassword" class="form-control" placeholder="کلمه عبور فعلی" aria-describedby="username">
                                        </div>
                                    </div>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon" id="email-address"> <i class="fa fa-key"></i></span>
                                            <input type="password" asp-for="Password" class="form-control" placeholder="کلمه عبور جدید" aria-describedby="email-address">
                                        </div>
                                    </div>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon" id="username"><i class="fa fa-key"></i></span>
                                            <input type="password" asp-for="RePassword" class="form-control" placeholder="تکرار کلمه عبور جدید" aria-describedby="username">
                                        </div>
                                    </div>
                                </div>
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="col-md-7 col-sm-8 col-xs-12">
                                    <button class="btn btn-success"> تغییر کلمه عبور </button>
                                </div>
                            </form>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</main>