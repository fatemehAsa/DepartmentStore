
@{
    ViewData["Title"] = "فعالسازی";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">ایران ابزار</a></li>
            <li id="RegisterText" class="breadcrumb-item active" aria-current="page">فعالسازی حساب کاربری</li>
        </ul>
    </nav>
</div>
@if (ViewBag.IsActive)
{
    <div class="container">
        <div class="alert alert-success text-right">
            <p>حساب کاربری شما با موفقیت فعال شد</p>
            <p>
                <a href="/Login">ورود به سایت</a>
            </p>
        </div>
    </div>
}
else
{
    <div class="alert alert-danger text-right">
        <p>حساب کاربری با مشخصات ارسال شده یافت نشد</p>
    </div>
}

