@model DepartmentStore.Core.DTOs.LoginViewModel
@{
    ViewData["Title"] = "ورود به سایت";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">ایران ابزار</a></li>
            <li id="RegisterText" class="breadcrumb-item active" aria-current="page">ورود به سایت</li>
        </ul>
    </nav>
</div>
<div class="login-wrap">
    <div class="login-html">
        @if (ViewBag.IsSuccess != null)
        {
            <div class="alert alert-success">
                <p class="help-block">ورود با موفقیت انجام شد</p>
            </div>

            <script>
                // Your delay in milliseconds
                var delay = 2500;
                setTimeout(function () { window.location = "http://localhost:20843/UserPanel"; }, delay);
            </script>
        }
        
        @if (ViewBag.EditProfile == true)
        {
            <div class="alert alert-warning">بدلیل ویرایش پروفایل و بارگزاری مجدد اطلاعات، لطفا مجدد لاگین کنید</div>
        }

        <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">ورود</label>
        <div class="login-form">
            <form asp-action="Login" method="post">
                <div class="sign-in-htm">
                    <div class="group">
                        <label for="user" class="label">ایمیل</label>
                        <input asp-for="Email" id="user" type="text" class="input">
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <div class="group">
                        <label for="pass" class="label">کلمه عبور</label>
                        <input asp-for="Password" id="pass" type="password" class="input" data-type="password">
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <div class="group">
                        <input asp-for="RememberMe" id="check" type="checkbox" class="check">
                        <label for="check"><span class="icon"></span>مرا به خاطر بسپار</label>
                    </div>
                    <div class="group">
                        <input type="submit" class="button" value="ورود">
                    </div>
                    <div class="hr"></div>
                    <div class="foot-lnk">
                        <a href="/ForgotPassword">رمز عبور خود ار فراموش کرده ام! </a>
                    </div>
                    <div class="foot-lnk">
                        <a href="/Register">ثبت نام</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
